{
    "name": "hulang/think-addons",
    "description": "The ThinkPHP 8.0.0 Addons Package",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "hulang",
            "email": "hulangfy@163.com"
        }
    ],
    "require": {
        "php": ">=8.0.0",
        "topthink/framework": "^8.0",
        "topthink/think-view": "^2.0",
        "topthink/think-helper": "^3.0.0"
    },
    "autoload": {
        "psr-4": {
            "think\\": "src/"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "extra": {
        "think": {
            "services": [
                "think\\addons\\Service"
            ],
            "config":{
                "addons": "src/config.php"
            }
        }
    },
    "scripts" : {
        "post-install-cmd": [
            "php think addons:config"
        ]
    }
}
